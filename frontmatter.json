{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": "'articles'",
      "filePrefix": null,
      "fields": [
        {
          "title": "Cover",
          "name": "cover",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "publishDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Language",
          "name": "language",
          "type": "choice",
          "default": "en",
          "choices": [
            {
              "id": "en",
              "title": "English"
            },
            {
              "id": "de",
              "title": "German"
            },
            {
              "id": "es",
              "title": "Spanish"
            },
            {
              "id": "da",
              "title": "Danish"
            }
          ]
        },
        {
          "title": "Draft",
          "name": "isDraft",
          "type": "draft"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.pageFolders": [
    {
      "title": "en",
      "path": "[[workspace]]/src/content/articles/en"
    }
  ],
  "frontMatter.content.publicFolder": {
    "path": "src/assets",
    "relative": true
  }
}