---
import PaperPlane from "@/components/icons/PaperPlane.astro";
import CheckedList from "@/components/lists/CheckedList.astro";

import { getLangFromUrl, useTranslation } from "@/i18n";
import Trans from "@/i18n/Trans.astro";

const lang = getLangFromUrl(Astro.url);

const {
  pages: {
    home: { manufacturing_potential: t },
  },
} = await useTranslation(lang);
---

<section class="py-[4.25rem]">
  <div class="container">
    <h2 class="heading-2 lg:text-center text-neutral-10 mb-8">
      <Trans translation={t.heading}>
        Maximise your manufacturing <br /> potential with a
        <span class="brand-gradient bg-clip-text text-transparent"
          >product configurator.</span
        >
      </Trans>
    </h2>

    <div class="py-10 grid grid-cols-1 lg:grid-cols-3 gap-20">
      <div
        class="py-12 border border-primary-7 rounded-2xl bg-primary-6 flex justify-center items-center order-2 lg:order-1"
      >
        <PaperPlane />
      </div>
      <CheckedList
        items={t.how_to_maximise}
        class="order-1 lg:order-2 lg:col-span-2"
      />
    </div>
  </div>
</section>
